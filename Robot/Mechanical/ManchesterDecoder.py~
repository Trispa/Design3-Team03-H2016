def main():
        connection = SerialManager(device='COM3')
        man =  ReadManchester(2,3, connection = connection)

        while(1):
            maChaine = man.getMaschesterBits()
            time.sleep(1)
            if(maChaine != '\0'):
                print(maChaine)


if __name__ == '__main__':
    main()


